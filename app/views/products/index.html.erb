<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Restaurante</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |item| %>
      <tr>
        <th><%= item.name %></th>
        <th><%= item.value %></th>
        <th><%= item.restaurant.name %></th>
      </tr>
    <% end %>
  </tbody>
</table>
